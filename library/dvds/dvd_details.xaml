<Page x:Class="library.dvds.dvd_details"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:library.dvds"
      xmlns:LinqAzureDatabase="clr-namespace:MyClassesLibrary;assembly=MyClassesLibrary"
      xmlns:library="clr-namespace:library"
      mc:Ignorable="d" FontFamily="Calibri" FontSize="12" Foreground="#374989"
      d:DesignHeight="600" d:DesignWidth="300"
      Title="dvd_details" Width="1200" MinWidth="300">
    <Page.Resources>
        <library:DVD x:Key="DVD"/>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0"/>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Rectangle Grid.Row="0" Grid.Column="0"/>
        <Rectangle Grid.Row="1" Grid.Column="1" Fill="White"/>
        <Rectangle Grid.Row="1" Grid.Column="2" Fill="White"/>
        <Rectangle Grid.Row="1" Grid.Column="3" Fill="White"/>
        <Border Grid.Row="1" Grid.Column="1" Padding="20,20,20,20">
        </Border>
        <Border Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" Padding="20,0,20,60">
            <StackPanel>
                <!--LABELS-->
                <Label x:Name="lblSuccessful"/>
                <Label x:Name="lblReEnter"/>

                <TextBlock FontSize="28">                   
                    DVDs
                </TextBlock>

                <TextBlock FontSize="16">
                    DVD Details
                    <LineBreak/>
                    Note to user:
                    <LineBreak/>
                    Admin user can insert, update or delete DVDs by editing this table and save changes.
                    <LineBreak/>
                    You need to select the DVD to update or delete.
                    <LineBreak/>
                    Select INSERT to add a DVD
                </TextBlock>

                <!--BUTTONS-->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0"/>
                        <RowDefinition Height="50"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0"/>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="90"/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="btnCancel" Content="CANCEL" Grid.Row="1" Grid.Column="9" Height="20" Width="80" Background="#374989" Foreground="White" Margin="0,14,1,16" Click="btnCancel_Click"></Button>
                    <Button x:Name="btnDelete" Content="DELETE" Grid.Row="1" Grid.Column="10" Height="20" Width="56" Background="#374989" Foreground="White" Click="btnDelete_Click"></Button>
                    <Button x:Name="btnUpdate" Content="UPDATE" Grid.Row="1" Grid.Column="11" Height="20" Width="56" Background="#374989" Foreground="White" Click="btnUpdate_Click"></Button>
                    <Button x:Name="btnInsert" Content="INSERT" Grid.Row="1" Grid.Column="12" Height="20" Width="56" Background="#374989" Foreground="White" Click="btnInsert_Click"></Button>
                    <Button x:Name="btnSave" Content="SAVE" Grid.Row="1" Grid.Column="13" Height="20" Width="80" Background="#374989" Foreground="White" Click="btnSave_Click"></Button>
                    <Button />
                </Grid>

                <ScrollViewer ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <Grid >
                        <DataGrid x:Name="myDataGrid" x:FieldModifier="public" ColumnWidth="*" AutoGenerateColumns="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Binding="{Binding DVDID}" Header="DVDID" Width="70"/>
                                <DataGridTextColumn Binding="{Binding Title}" Header="Title" Width="200"/>
                                <DataGridTextColumn Binding="{Binding Producer}" Header="Producer" Width="140"/>
                                <DataGridTextColumn Binding="{Binding CopiesTotal}" Header="Copies" Width="50"/>
                                <DataGridTextColumn Binding="{Binding CopiesAvailable}" Header="Available" Width="60"/>
                                <DataGridTextColumn Binding="{Binding CopiesOut}" Header="Out" Width="50"/>
                                <DataGridTextColumn Binding="{Binding SubjectArea}" Header="Subject" Width="100"/>
                                <DataGridTextColumn Binding="{Binding YearOfPublication}" Header="YearOfPublication" Width="100"/>
                                <DataGridTextColumn Binding="{Binding Keyword}" Header="Keyword" Width="60"/>
                                <DataGridTextColumn Binding="{Binding DVDNumberID}" Header="DVDNumberID" Width="45"/>
                                <DataGridTextColumn Binding="{Binding ShelfNumber}" Header="Shelf" Width="45"/>
                                <DataGridTextColumn Binding="{Binding Status}" Header="Status" Width="60"/>


                                <DataGridTemplateColumn>
                                    <DataGridTemplateColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <TextBlock>
                                            Actions
                                            </TextBlock>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.HeaderTemplate>

                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">


                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </ScrollViewer>
            </StackPanel>
        </Border>
    </Grid>
</Page>
