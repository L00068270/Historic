<Page x:Class="library.pages.signup"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:library.pages"
      mc:Ignorable="d" 
      d:DesignHeight="888" d:DesignWidth="1200"
      Title="signup" Height="auto" Width="400" MinWidth="300" Background="#FF868CC5">

    <Grid x:Name="LayoutRoot" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="0"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0"/>
            <ColumnDefinition Width="*"/>
            
        </Grid.ColumnDefinitions>
        <Rectangle Grid.Row="0" Grid.Column="0"/>
        <Rectangle Grid.Row="1" Grid.Column="1" Fill="White"/>

        <Border Grid.Row="1" Grid.Column="1" Padding="20,60,20,60">
            <StackPanel>
                <Grid>
                    <DataGrid x:Name="myDataGrid" ColumnWidth="*" AutoGenerateColumns="False">
                        <!--Title-->
                        <TextBlock Text="User Registration :" Grid.Row="0" FontSize="24"  Foreground="Black"/>

                        <!--MemberID-->
                        <TextBlock Text="MemberID :" Grid.Row="1" Margin="0,10,0,0" Foreground="Black"/>
                        <TextBox Name="tbxMemberID"  Grid.Row="1" Margin="100,0,0,0" BorderBrush="LightGray"/>
                        <!--NameFirst-->
                        <TextBlock Text="Firstname :" Grid.Row="2" Margin="0,10,0,0" Foreground="Black"/>
                        <TextBox Name="tbxNameFirst"  Grid.Row="2" Margin="100,0,0,0" BorderBrush="LightGray"/>
                        <!--NameInitial-->
                        <TextBlock Text="Initials :" Grid.Row="3" Margin="0,10,0,0" Foreground="Black"/>
                        <TextBox Name="tbxNameInitials" Grid.Row="3" Margin="100,0,0,0" BorderBrush="LightGray"/>
                        <!--NameLast-->
                        <TextBlock Text="Lastname :" Grid.Row="4" Margin="0,10,0,0" Foreground="Black"/>
                        <TextBox Name="tbxNameLast" Grid.Row="4" Margin="100,0,0,0" BorderBrush="LightGray"/>
                        <!--Username-->
                        <TextBlock Text="Username :" Grid.Row="5" Margin="0,10,0,0" Foreground="Black"/>
                        <TextBox Name="tbxUsername" Grid.Row="5" Margin="100,0,0,0" BorderBrush="LightGray"/>
                        <!--Password-->
                        <TextBlock Text="Password :" Grid.Row="6" Margin="0,10,0,0" Foreground="Black"/>
                        <TextBox Name="tbxPassword" Grid.Row="6" Margin="100,0,0,0" BorderBrush="LightGray"/>
                        <TextBlock Text="Confirm Password :" Grid.Row="7" Margin="0,10,0,0" Foreground="Black"/>
                        <TextBox Name="tbxConfirmPassword" Grid.Row="7" Margin="100,0,0,0" BorderBrush="LightGray"/>
                        <!--Address-->
                        <TextBlock Text="Address :" Grid.Row="8" Margin="0,10,0,0" Foreground="Black"/>
                        <TextBox Name="tbxAddress" Grid.Row="8" Margin="100,0,0,0" BorderBrush="LightGray"/>
                        <!--Street-->
                        <TextBlock Text="Street :" Grid.Row="9" Margin="0,10,0,0" Foreground="Black"/>
                        <TextBox Name="tbxStreet" Grid.Row="9" Margin="100,0,0,0" BorderBrush="LightGray"/>
                        <!--Town-->
                        <TextBlock Text="Town :" Grid.Row="10" Margin="0,10,0,0" Foreground="Black"/>
                        <TextBox Name="tbxTown" Grid.Row="10" Margin="100,0,0,0" BorderBrush="LightGray"/>
                        <!--County-->
                        <TextBlock Text="County :" Grid.Row="11" Margin="0,10,0,0" Foreground="Black"/>
                        <TextBox Name="tbxCounty" Grid.Row="11" Margin="100,0,0,0" BorderBrush="LightGray"/>
                        <!--Country-->
                        <TextBlock Text="Country :" Grid.Row="12" Margin="0,10,0,0" Foreground="Black"/>
                        <TextBox Name="tbxCountry" Grid.Row="12" Margin="100,0,0,0" BorderBrush="LightGray"/>
                        <!--Postcode-->
                        <TextBlock Text="Postcode :" Grid.Row="13" Margin="0,10,0,0" Foreground="Black"/>
                        <TextBox Name="tbxPostcode" Grid.Row="13" Margin="100,0,0,0" BorderBrush="LightGray"/>
                        <!--Classification-->
                        <TextBlock Text="Classification :" Grid.Row="14" Margin="0,10,0,0" Foreground="Black"/>
                        <TextBox Name="tbxClassification" Grid.Row="14" Margin="100,0,0,0" BorderBrush="LightGray"/>

                        <!--Submit Button-->

                        <Button Name="btnSubmit" Content="Submit" Grid.Row="15" Margin="0,30,0,0" Height="20" Width="80" HorizontalAlignment="Right" Background="#FF30DABB" BorderBrush="Transparent" Click="btnSubmit_Click"/>
                        <Button Name="btnRegister" Content="Submit" Grid.Row="16" Margin="0,30,0,0" Height="20" Width="80" HorizontalAlignment="Right" Background="#FF30DABB" BorderBrush="Transparent" Click="btnRegister_Click"/>
                    </DataGrid>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Page>
