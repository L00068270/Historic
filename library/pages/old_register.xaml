<Page x:Class="library.pages.old_register"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:library.pages"
      mc:Ignorable="d" FontFamily="Calibri" FontSize="12" Foreground="#374989"
      d:DesignHeight="620" d:DesignWidth="300"
      Title="old_register" Width="1200" MinWidth="300">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Rectangle Grid.Row="0" Grid.Column="0"/>
        <Rectangle Grid.Row="1" Grid.Column="1" Fill="FloralWhite"/>
        <Rectangle Grid.Row="1" Grid.Column="2" Fill="White"/>
        <Rectangle Grid.Row="1" Grid.Column="3" Fill="FloralWhite"/>
        <Border Grid.Row="1" Grid.Column="1" Padding="20,60,20,60">
            <Label Content="Library Application Regristration" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20"/>
        </Border>

        <Border Grid.Row="1" Grid.Column="2" Padding="20,60,20,60">
            <StackPanel>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <!--LABELS-->
                    <Label x:Name="lblNameFirst" Content="First Name" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    <Label x:Name="lblNameInitial" Content="Initials" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    <Label x:Name="lblNameLast" Content="Last Name" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    <Label x:Name="lblUsername" Content="Username" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    <Label x:Name="lblPassword" Content="Password" Grid.Row="5" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    <Label x:Name="lblConfirmPassword" Content="Confirm Password" Grid.Row="6" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    <Label x:Name="lblAddress" Content="Address" Grid.Row="7" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    <Label x:Name="lblStreet" Content="Street" Grid.Row="8" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    <Label x:Name="lblTown" Content="Town" Grid.Row="9" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    <Label x:Name="lblCounty" Content="County" Grid.Row="10" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    <Label x:Name="lblCountry" Content="Country" Grid.Row="11" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    <Label x:Name="lblPostcode" Content="Postcode" Grid.Row="12" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    <Label x:Name="lblClassification" Content="Classification" Grid.Row="13" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    <!--TEXT BOXES-->
                    <TextBox x:Name="tbxNameFirst"  Grid.Row="1" Grid.Column="3" HorizontalAlignment="Left" VerticalAlignment="Center" Height="23" Width="120" Padding="2,4,2,2"/>
                    <TextBox x:Name="tbxNameInitial" Grid.Row="2" Grid.Column="3" HorizontalAlignment="Left" VerticalAlignment="Center" Height="23" Width="120" Padding="2,4,2,2"/>
                    <TextBox x:Name="tbxNameLast" Grid.Row="3" Grid.Column="3" HorizontalAlignment="Left" VerticalAlignment="Center" Height="23" Width="120" Padding="2,4,2,2"/>
                    <TextBox x:Name="tbxUsername" Grid.Row="4" Grid.Column="3" HorizontalAlignment="Left" VerticalAlignment="Center" Height="23" Width="120" Padding="2,4,2,2"/>
                    <TextBox x:Name="tbxPassword" Grid.Row="5" Grid.Column="3" HorizontalAlignment="Left" VerticalAlignment="Center" Height="23" Width="120" Padding="2,4,2,2"/>
                    <TextBox x:Name="tbxConfirmPassword" Grid.Row="6" Grid.Column="3" HorizontalAlignment="Left" VerticalAlignment="Center" Height="23" Width="120" Padding="2,4,2,2"/>
                    <TextBox x:Name="tbxAddress" Grid.Row="7" Grid.Column="3" HorizontalAlignment="Left" VerticalAlignment="Center" Height="23" Width="120" Padding="2,4,2,2"/>
                    <TextBox x:Name="tbxStreet" Grid.Row="8" Grid.Column="3" HorizontalAlignment="Left" VerticalAlignment="Center" Height="23" Width="120" Padding="2,4,2,2"/>
                    <TextBox x:Name="tbxTown" Grid.Row="9" Grid.Column="3" HorizontalAlignment="Left" VerticalAlignment="Center" Height="23" Width="120" Padding="2,4,2,2"/>
                    <TextBox x:Name="tbxCounty" Grid.Row="10" Grid.Column="3" HorizontalAlignment="Left" VerticalAlignment="Center" Height="23" Width="120" Padding="2,4,2,2"/>
                    <TextBox x:Name="tbxCountry" Grid.Row="11" Grid.Column="3" HorizontalAlignment="Left" VerticalAlignment="Center" Height="23" Width="120" Padding="2,4,2,2"/>
                    <TextBox x:Name="tbxPostcode" Grid.Row="12" Grid.Column="3" HorizontalAlignment="Left" VerticalAlignment="Center" Height="23" Width="120" Padding="2,4,2,2"/>
                    <TextBox x:Name="tbxClassification" Grid.Row="13" Grid.Column="3" HorizontalAlignment="Left" VerticalAlignment="Center" Height="23" Width="120" Padding="2,4,2,2"/>
                </Grid>

                <!--BUTTONS-->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0"/>
                        <RowDefinition Height="50"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="btnRegister" Content="REGISTER" Grid.Row="1" Grid.Column="3" Height="20" Width="80" HorizontalAlignment="Right" Background="#374989" Foreground="White" Click="btnRegister_Click"></Button>
                    <Button x:Name="btnCancel" Content="CANCEL" Grid.Row="1" Grid.Column="2" Height="20" Width="80" HorizontalAlignment="Right" Background="#374989" Foreground="White" Click="btnCancel_Click"></Button>
                </Grid>
               
                <!--LABELS-->
                <Label x:Name="lblSuccessful"/>
                <Label x:Name="lblReEnter"/>
                <Label x:Name="lblUsernameNotAvailable"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
